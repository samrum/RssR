{
  "manifest_version": 2,

  "name": "RssR: Rss Feed Notifier",
  "short_name": "RssR",
  "description": "Grab recent article headlines from RSS feeds",
  "version": "1.0",
  "author": "Ruben Medina",

  "browser_action": {
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icons/128.png",
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png"
  },
  "background": {
    "scripts": [
      "js/Storage.js",
      "js/FeedService.js",
      "js/background.js",
      "js/jquery-2.1.4.min.js"
    ],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": ["*://*/*", "alarms", "storage", "tabs"]
}
